@model IEnumerable<WebFotoAlbum3.Models.Slika>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nova slika", "Create")
</p>
<table class="table table-bordered table-striped"  >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naslov)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Opis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatumKreiranja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Korisnik)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Naslov)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Opis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatumKreiranja)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Korisnik)
        </td>
        <td>
            @Html.ActionLink("Promeni", "Edit", new { id=item.SlikaId }) |
            @Html.ActionLink("Prikazi", "Prikaz", new { id=item.SlikaId }) |
            @Html.ActionLink("Obrisi", "Delete", new { id=item.SlikaId })
        </td>
    </tr>
}

</table>
